{
  "id": "com.custom.rtlTable",
  "name": "RTL Table",
  "version": "1.0.0",
  "description": "A simple table widget with right-to-left direction for Hebrew",
  "newInstancePrefix": "rtlTable",
  "vendor": "custom",
  "eula": "",
  "license": "MIT",
  "icon": "data:image/png;base64,",
  "webcomponents": [
    {
      "kind": "main",
      "tag": "rtl-table-widget",
      "url": "https://raw.githubusercontent.com/SAP-Custom-Widget/dynamoTable/main/rtlTable.js",
      "integrity": "",
      "ignoreIntegrity": true
    }
  ],
  "properties": {
    "tableTitle": {
      "description": "Table Title",
      "type": "string",
      "default": "טבלה בעברית"
    },
    "showBorders": {
      "type": "boolean",
      "default": true
    }
  },
  "methods": {
    "setTableData": {
      "description": "Sets the table data for RTL display",
      "parameters": [
        {
          "name": "data",
          "type": "string"
        }
      ]
    }
  },
  "events": {
    "onRowClick": {
      "description": "Triggered when a table row is clicked"
    }
  }
}